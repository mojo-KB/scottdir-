<script>

$('#menu > ul.navbar-nav li').click(function(e) {
    $('.navbar li.active').removeClass('active');
    var $this = $(this);
alert("Clicked Menu");
    if (!$this.hasClass('active')) {
        $this.addClass('active');
    }
    e.preventDefault();
});

var homeLoaded = false;
var helpLoaded = false;
var contactLoaded = false;
var aboutLoaded = false;
var doWelcome = true;
var Debug = true;
// Gets turned back on if Debug is true
$( "#mainrow" ).hide();

$( "#helpRow" ).hide();
$( "#contactRow" ).hide();
$( "#aboutRow" ).hide();

// This code makes sure the navbar tab that you want to start active
// is set active and runs the startup code for it

var initialNavTab = '#Home';
//var initialNavTab = 'display';
//var initialNavTab = 'help';



//$("ul.nav li").each( function() {
$("ul.navbar-nav li").each( function() {
        $(this).removeClass("active"); 
//alert('THIS' + $(this).find('a').attr('value'));
//this doesn't work: alert('THIS2' + $(this).find('a:display'));
        //if ( ($this).find('a:display') ) {
        if ($(this).find('a').attr('value') == initialNavTab) {
                $(this).addClass('active');
		// Turn off welcome banner on first click of nav bar
        	if ( '#Home' == initialNavTab ) {
                	initHome();
        	}
        	if ( '#About' == initialNavTab ) {
                	initAbout();
        	}
        	if ( '#Help' == initialNavTab ) {
                	initHelp();
        	}
        	if ( '#Contact' == initialNavTab ) {
                	initContact();
        	}
   	}
	})

                //alert('FOUND IT');
//$(".nav li a:active").removeClass('active');//remove pseudo class
//}
//$(".nav li#display").addClass('active');
//$(".nav #display").addClass('active');

function initHome() { 
	if (Debug==true)
	   $( "#mainrow" ).show();
	if (doWelcome==true)
	   $( "#welcome" ).show();
	$( "#editRows" ).hide();
	$( "#checkboxes" ).hide();
	$( "#helpRow" ).hide();
        $( "#contactRow" ).hide();
	$( "#aboutRow" ).hide();
	$( "#editRows" ).hide();
	$( "#checkboxes" ).hide();
	$( "#helpRow" ).hide();
	$( "#editRows" ).hide();
	$( "#checkboxes" ).hide();
  	document.getElementById("getfiles").disabled = false;
	document.getElementById("getcontent").disabled=true;
	document.getElementById("savecontent").disabled=true;
        //alert('it was home');
}
function initAbout() { 
	if (Debug==true)
	   $( "#mainrow" ).show();
	if (doWelcome==true)
	   $( "#welcome" ).show();
	$( "#helpRow" ).hide();
        $( "#contactRow" ).hide();
	$( "#editRows" ).hide();
	$( "#checkboxes" ).hide();
	$( "#editRows" ).hide();
	$( "#checkboxes" ).hide();
        $( "#aboutRow" ).show();
        if (aboutLoaded == false) {
                $( "#aboutRow" ).load("fileEditAbout");
                aboutLoaded = true;
        //alert('it was about');
        }
}
function initHelp() { 
	if (Debug==true)
	   $( "#mainrow" ).show();
	if (doWelcome==true)
	   $( "#welcome" ).show();
        $( "#contactRow" ).hide();
	$( "#aboutRow" ).hide();
	$( "#editRows" ).hide();
	$( "#checkboxes" ).hide();
	$( "#editRows" ).hide();
	$( "#checkboxes" ).hide();
        //alert('it was help');
        $( "#helpRow" ).show();
        if (helpLoaded == false) {
                $( "#helpRow" ).load("fileEditHelp");
                helpLoaded = true;
        //alert('it was help');
        }
}
function initContact() { 
	if (Debug==true)
	   $( "#mainrow" ).show();
	if (doWelcome==true)
	   $( "#welcome" ).show();
	$( "#aboutRow" ).hide();
	$( "#editRows" ).hide();
	$( "#checkboxes" ).hide();
	$( "#helpRow" ).hide();
	$( "#editRows" ).hide();
	$( "#checkboxes" ).hide();
        $( "#contactRow" ).show();
        if (contactLoaded == false) {
        	$( "#contactRow" ).load("fileEditContact");
        	contactLoaded = true;
        //alert('it was contact');
        }
}
// **********************
$(document).ready(function () {
        $('ul.nav > li').click(function (e) {
            e.preventDefault();
            $('ul.nav > li').removeClass('active');
            $(this).addClass('active');                
 	    var myValue=$(this).find('a').attr('value');
 	    //alert('READY2' + myValue);
	    doWelcome=false;
	    $( "#welcome" ).hide();
	    if (myValue == '#Home') {
		initHome();
	    }
	    if (myValue == '#About') {
		initAbout();
	    }
	    if (myValue == '#Contact') {
		initContact();
	    }
	    if (myValue == '#Help') {
		initHelp();
	    }
	});            
    });

</script>


